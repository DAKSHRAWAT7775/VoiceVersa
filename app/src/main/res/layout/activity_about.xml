<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/bacc"
            app:tint="@color/inverse"
            android:src="@drawable/back"
            android:background="@android:color/transparent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About us"
            android:textAlignment="center"

            android:layout_below="@id/bacc"
            android:id="@+id/about_header"
            android:textSize="40sp"
            android:textStyle="bold"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/img_about"
        android:layout_below="@id/about_header"
        android:src="@drawable/voiceversa_no_bg" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meet the team"
        android:id="@+id/meet"
        android:layout_below="@id/img_about"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/meet"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parth Passi"
            android:id="@+id/name1"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shivain Singh"
            android:id="@+id/name2"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agneya Mishra"
            android:id="@+id/name3"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daksh Rawat"
            android:id="@+id/name4"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="invisible"/>

    </LinearLayout>

</RelativeLayout>